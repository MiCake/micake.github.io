---
// Landing Page - "Cozy Engineering" Theme
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/react/Navbar';
import Hero from '../components/react/Hero';
import BentoGrid from '../components/react/BentoGrid';
import CodeWindow from '../components/react/CodeWindow';
import Footer from '../components/Footer.astro';

// Import Tailwind CSS for utility classes
import '../styles/tailwind.css';
---

<Layout 
  title="MiCake - Lightweight DDD Framework for .NET"
  description="MiCake is a lightweight Domain-Driven Design toolkit for .NET, providing DDD tactical patterns, auto-audit, soft delete, and more."
>
  <!-- Navbar - Immediate interactivity -->
  <Navbar client:load />
  
  <!-- Hero Section - Immediate interactivity -->
  <Hero client:load />
  
  <!-- Features Bento Grid - Scroll-based interactivity -->
  <BentoGrid client:visible />
  
  <!-- Code Experience - Scroll-based interactivity -->
  <CodeWindow client:visible />
  
  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to bake something amazing?</h2>
        <p class="cta-description">
          Join developers worldwide building better .NET applications with MiCake.
        </p>
        <div class="cta-buttons">
          <a href="/getting-started/quick-start/" class="cta-button primary">
            <span>ðŸ“š</span>
            Read the Docs
          </a>
          <a href="https://github.com/MiCake/MiCake" target="_blank" rel="noopener noreferrer" class="cta-button secondary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
            Star on GitHub
          </a>
        </div>
      </div>
      <div class="cta-glow"></div>
    </div>
  </section>
  
  <!-- Footer - Static (no hydration) -->
  <Footer />
</Layout>

<style>
  /* CTA Section */
  .cta-section {
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
  }

  .cta-container {
    position: relative;
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .cta-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .cta-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .cta-button.primary {
    background: var(--brand-primary);
    color: #12100E;
  }

  .cta-button.primary:hover {
    background: var(--brand-secondary);
    box-shadow: 0 0 30px rgba(255, 159, 28, 0.4);
  }

  .cta-button.secondary {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }

  .cta-button.secondary:hover {
    border-color: var(--brand-primary);
    background: rgba(255, 159, 28, 0.05);
  }

  .cta-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 400px;
    background: radial-gradient(ellipse at center, rgba(255, 159, 28, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-button {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>
